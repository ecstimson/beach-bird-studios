---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
// import ServiceCard from '../../components/ServiceCard.astro'; // Unused
import FeatureGrid from '../../components/FeatureGrid.astro';
import CTASection from '../../components/CTASection.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = 'AI Website Development Wilmington NC | Beach Bird Studios';
const pageDescription = 'Scale your business with AI-powered website development. Create 100+ pages in weeks, not months. Perfect for enterprises and ambitious local businesses in NC.';

const aiFeatures = [
  {
    icon: 'cpu',
    title: 'AI-Powered Content Generation',
    description: 'Our AI creates unique, SEO-optimized content for every page. No duplicate content, no thin pages - just comprehensive coverage of your industry.'
  },
  {
    icon: 'lightning',
    title: 'Massive Scale, Fast Delivery',
    description: 'Generate 100-1000 pages in weeks instead of years. Perfect for businesses that need comprehensive online presence quickly.'
  },
  {
    icon: 'target',
    title: 'Every Keyword Covered',
    description: 'Dominate search results by targeting every relevant keyword in your industry. Leave no search opportunity uncaptured.'
  },
  {
    icon: 'brain',
    title: 'Intelligent Site Architecture',
    description: 'AI designs optimal site structure, internal linking, and user flows to maximize both SEO performance and user experience.'
  },
  {
    icon: 'trending-up',
    title: 'Performance at Scale',
    description: 'Even with hundreds of pages, your site loads fast. Advanced optimization ensures speed never suffers as you scale.'
  },
  {
    icon: 'shield-check',
    title: 'Quality Assurance',
    description: 'Every AI-generated page is reviewed and refined by our team. Technology handles scale, humans ensure quality.'
  }
];

const processSteps = [
  {
    icon: 'search',
    title: 'Market Analysis',
    description: 'AI analyzes your industry, competitors, and keyword opportunities to map out comprehensive content strategy.'
  },
  {
    icon: 'layers',
    title: 'Architecture Design',
    description: 'Intelligent site structure designed for both user experience and maximum SEO impact.'
  },
  {
    icon: 'cpu',
    title: 'Content Generation',
    description: 'AI creates unique, valuable content for every page while maintaining your brand voice and expertise.'
  },
  {
    icon: 'rocket',
    title: 'Launch & Optimize',
    description: 'Deploy your comprehensive website and continuously optimize based on performance data.'
  }
];

// Unused comparison data - remove if not needed
