---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
// import ServiceCard from '../../components/ServiceCard.astro'; // Unused
import FeatureGrid from '../../components/FeatureGrid.astro';
import CTASection from '../../components/CTASection.astro';
import Footer from '../../components/Footer.astro';

const pageTitle = 'Custom Website Design Wilmington NC | Beach Bird Studios';
const pageDescription = 'Beautiful custom website design in Wilmington NC. Get a stunning, fast website built in 4-6 weeks. No templates, no compromises. Free consultation available.';

const designFeatures = [
  {
    icon: 'palette',
    title: 'Truly Custom Design',
    description: 'Every pixel crafted specifically for your brand. No templates, no cookie-cutter solutions - just beautiful, unique design that sets you apart.'
  },
  {
    icon: 'zap',
    title: '4-6 Week Delivery',
    description: 'While others take months, we deliver complete custom websites in weeks. Your business can\'t afford to wait half a year to start generating leads.'
  },
  {
    icon: 'smartphone',
    title: 'Mobile-First Approach',
    description: 'Over 60% of searches happen on mobile. We design for mobile first, ensuring perfect experiences on every device.'
  },
  {
    icon: 'search',
    title: 'SEO Foundation Built-In',
    description: 'Every custom site includes technical SEO, proper structure, and speed optimization. Ready to rank from day one.'
  },
  {
    icon: 'shield-check',
    title: 'Secure & Reliable',
    description: 'SSL certificates, secure hosting, daily backups, and ongoing monitoring. Your website is always protected and online.'
  },
  {
    icon: 'trending-up',
    title: 'Conversion Focused',
    description: 'Beautiful design means nothing if it doesn\'t convert. Every element is strategically placed to turn visitors into customers.'
  }
];

const processSteps = [
  {
    icon: 'phone',
    title: 'Discovery Call',
    description: 'We learn about your business, goals, and vision for your new website.'
  },
  {
    icon: 'palette',
    title: 'Design Concepts',
    description: 'Multiple design options presented for your feedback and approval.'
  },
  {
    icon: 'code',
    title: 'Development',
    description: 'Your approved design brought to life with clean, optimized code.'
  },
  {
    icon: 'rocket',
    title: 'Launch & Support',
    description: 'Go live with confidence knowing we\'re here for ongoing support.'
  }
];

// Unused comparison data - remove if not needed
/*
const comparisonData = [
  {
    icon: 'check',
    title: 'What You Get With Us',
    description: 'Custom design, fast delivery, local support, transparent pricing, ongoing optimization, and real results.'
  },
  {
    icon: 'x',
    title: 'What Others Deliver',
    description: 'Template designs, 6-month timelines, offshore support, hidden fees, abandoned after launch, minimal impact.'
  }
];
*/
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  structuredDataType="Service"
  structuredData={{
    breadcrumb: [
      { name: 'Home', url: '/' },
      { name: 'Services', url: '/services' },
      { name: 'Custom Website Design', url: '/services/custom-website-design' }
    ],
    service: {
      name: 'Custom Website Design',
      type: 'Web Design Service',
      description: 'Professional custom website design services for North Carolina businesses. Fast delivery, beautiful designs, and conversion-focused development.'
    }
  }}
>
  <SEO title={pageTitle} description={pageDescription} />
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero
      headline="Custom Website Design That Converts"
      subheadline="Beautiful, fast websites built specifically for North Carolina businesses. No templates, no compromises - just results."
      primaryCTA={{ text: 'Get Your Custom Quote', href: '/contact' }}
      variant="gradient"
    />
    
    <!-- Introduction Section -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-gray-900 mb-6">
            Your Website Should Be As Unique As Your Business
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Every business in Wilmington has a unique story, unique customers, and unique goals. 
            Why settle for a template that looks like everyone else? Our custom web design service 
            creates websites that perfectly represent your brand and speak directly to your ideal customers.
          </p>
          <p class="text-lg text-gray-600">
            While other agencies take 6-8 months and charge Fortune 500 prices, we deliver 
            stunning custom websites in just 4-6 weeks at prices that make sense for local businesses.
          </p>
        </div>
      </div>
    </section>
    
    <!-- Features Grid -->
    <section class="section-padding bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-gray-900 mb-4">
            What Makes Our Custom Design Different
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            We combine beautiful design with strategic thinking to create websites that don't just look good - they deliver results.
          </p>
        </div>
        
        <FeatureGrid features={designFeatures} columns={3} variant="cards" />
      </div>
    </section>
    
    <!-- Process Section -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-gray-900 mb-4">
            Our Design Process
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Simple, transparent, and designed to get you results fast.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {processSteps.map((step, index) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-beach-blue to-beach-dark rounded-full flex items-center justify-center mx-auto mb-4">
                <i data-lucide={step.icon} class="w-8 h-8 text-white"></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">
                {index + 1}. {step.title}
              </h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Perfect For Section -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-gray-900 mb-8 text-center">
            Perfect For Businesses That Want:
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <i data-lucide="check-circle" class="w-6 h-6 text-beach-blue mt-1 mr-3 flex-shrink-0"></i>
              <span class="text-lg text-gray-700">A website that stands out from competitors using generic templates</span>
            </li>
            <li class="flex items-start">
              <i data-lucide="check-circle" class="w-6 h-6 text-beach-blue mt-1 mr-3 flex-shrink-0"></i>
              <span class="text-lg text-gray-700">Professional design without the agency price tag</span>
            </li>
            <li class="flex items-start">
              <i data-lucide="check-circle" class="w-6 h-6 text-beach-blue mt-1 mr-3 flex-shrink-0"></i>
              <span class="text-lg text-gray-700">Fast delivery - weeks not months</span>
            </li>
            <li class="flex items-start">
              <i data-lucide="check-circle" class="w-6 h-6 text-beach-blue mt-1 mr-3 flex-shrink-0"></i>
              <span class="text-lg text-gray-700">A local partner who understands the North Carolina market</span>
            </li>
            <li class="flex items-start">
              <i data-lucide="check-circle" class="w-6 h-6 text-beach-blue mt-1 mr-3 flex-shrink-0"></i>
              <span class="text-lg text-gray-700">Ongoing support and optimization after launch</span>
            </li>
          </ul>
        </div>
      </div>
    </section>
    
    <!-- Related Services -->
    <section class="section-padding bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-gray-900 mb-4">
            Explore Our Other Services
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Not sure if custom design is right for you? Check out our other solutions.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <a href="/services/ai-website-development" class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <i data-lucide="cpu" class="w-8 h-8 text-beach-blue mr-4 flex-shrink-0"></i>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">AI Website Development</h3>
                <p class="text-gray-600 mb-2">Need 100+ pages to dominate your market? Our AI development creates comprehensive websites faster than you thought possible.</p>
                <span class="text-beach-blue font-semibold flex items-center">
                  Learn More
                  <i data-lucide="arrow-right" class="w-4 h-4 ml-1"></i>
                </span>
              </div>
            </div>
          </a>
          
          <a href="/services/seo-services" class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <i data-lucide="search" class="w-8 h-8 text-beach-blue mr-4 flex-shrink-0"></i>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">SEO Services</h3>
                <p class="text-gray-600 mb-2">Already have a website? We'll optimize it for search engines without requiring a rebuild. Works with any platform.</p>
                <span class="text-beach-blue font-semibold flex items-center">
                  Learn More
                  <i data-lucide="arrow-right" class="w-4 h-4 ml-1"></i>
                </span>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>
    
    <!-- Final CTA -->
    <CTASection
      headline="Ready for a Website That Actually Works?"
      description="Stop losing customers to competitors with better websites. Let's create something amazing together."
      primaryCTA={{ text: 'Get Your Free Design Consultation', href: '/contact' }}
      secondaryCTA={{ text: 'Call 910-512-6990', href: 'tel:910-512-6990' }}
      variant="gradient"
    />
  </main>
  
  <Footer />
</Layout>