---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Ultimate Web Design Guide 2025 - Everything You Need to Know | Beach Bird Studios';
const pageDescription = 'Complete guide to web design in 2025. Learn about modern design principles, best practices, costs, and how to choose the right web designer for your business.';

const designPrinciples = [
  {
    icon: 'user',
    title: 'User-Centered Design',
    description: 'Every design decision should prioritize your users\' needs and experience. What are they trying to accomplish?',
    iconColor: 'blue'
  },
  {
    icon: 'smartphone',
    title: 'Mobile-First Approach',
    description: 'Over 60% of web traffic is mobile. Design for phones first, then scale up to tablets and desktops.',
    iconColor: 'green'
  },
  {
    icon: 'zap',
    title: 'Speed & Performance',
    description: 'Fast-loading websites rank higher in Google and convert better. Aim for under 3-second load times.',
    iconColor: 'yellow'
  },
  {
    icon: 'accessibility',
    title: 'Accessibility Standards',
    description: 'Design for everyone. Follow WCAG guidelines to ensure your site works for users with disabilities.',
    iconColor: 'purple'
  },
  {
    icon: 'search',
    title: 'SEO Integration',
    description: 'Beautiful design means nothing if people can\'t find you. Build SEO into your design from day one.',
    iconColor: 'cyan'
  },
  {
    icon: 'trending-up',
    title: 'Conversion Focused',
    description: 'Every element should guide visitors toward taking action. Design with your goals in mind.',
    iconColor: 'orange'
  }
];

const modernTrends = [
  {
    icon: 'minimize-2',
    title: 'Minimalist Design',
    description: 'Clean, uncluttered layouts that focus attention on what matters most to your visitors.',
    iconColor: 'blue'
  },
  {
    icon: 'type',
    title: 'Bold Typography',
    description: 'Large, readable fonts that create hierarchy and guide users through your content.',
    iconColor: 'green'
  },
  {
