---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  structuredDataType="WebPage"
  structuredData={{
    breadcrumb: [
      { name: "Home", url: "/" },
      { name: "Process", url: "/process" }
    ]
  }}
>
  <Header />
  
  <Hero
    headline="Our Proven <span style='color: #FFC107;'>Process</span> for Success"
    subheadline="Clear timelines, transparent communication, and guaranteed results. Here's exactly how we transform your online presence."
    primaryCTA={{
      text: "Start Your Project",
      href: "/contact"
    }}
    secondaryCTA={{
      text: "View Portfolio", 
      href: "/portfolio"
    }}
  />

  <main>
    <!-- Overall Process Overview -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-fadeInUp">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-dark mb-6">
            How We Work Together
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Our proven 5-step process ensures your project is completed on time, on budget, and exceeds your expectations.
          </p>
        </div>

        <div class="space-y-8">
          {overallProcess.map((step, index) => (
            <div class={`flex flex-col lg:flex-row gap-8 items-center animate-fadeInUp stagger-${index + 1}`}>
              <!-- Step Number -->
              <div class={`flex-shrink-0 w-24 h-24 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                <span class="text-2xl font-bold text-white">{step.step}</span>
              </div>
              
              <!-- Step Content -->
              <div class={`flex-1 ${index % 2 === 1 ? 'lg:order-1 lg:text-right' : ''}`}>
                <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
                  <div class="flex items-center gap-4 mb-4">
                    <h3 class="text-2xl font-bold text-dark">{step.title}</h3>
                    <span class="px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
                      {step.duration}
                    </span>
                  </div>
                  <p class="text-gray-600 mb-6">{step.description}</p>
                  
                  <div>
                    <h4 class="font-semibold text-dark mb-3">Key Deliverables:</h4>
                    <div class="grid sm:grid-cols-2 gap-2">
                      {step.deliverables.map((deliverable) => (
                        <div class="flex items-center gap-2">
                          <i data-lucide="check-circle" class="w-4 h-4 text-green-500 flex-shrink-0"></i>
                          <span class="text-sm text-gray-600">{deliverable}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Service-Specific Processes -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-fadeInUp">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-dark mb-6">
            Service-Specific Workflows
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Each service has its own optimized workflow designed for maximum efficiency and results.
          </p>
        </div>

        <!-- Process Tabs -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <button class="process-tab active px-6 py-3 bg-primary text-white rounded-full font-semibold" data-tab="custom-design">
            Custom Web Design
          </button>
          <button class="process-tab px-6 py-3 bg-white text-gray-700 rounded-full font-semibold hover:bg-primary/10" data-tab="ai-development">
            AI Website Development
          </button>
          <button class="process-tab px-6 py-3 bg-white text-gray-700 rounded-full font-semibold hover:bg-primary/10" data-tab="seo-services">
            SEO Services
          </button>
        </div>

        <!-- Custom Design Process -->
        <div id="custom-design-process" class="process-content">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {customDesignProcess.map((phase, index) => (
              <div class={`bg-white rounded-xl p-6 shadow-lg animate-fadeInUp stagger-${index + 1}`}>
                <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                  <span class="text-primary font-bold">{index + 1}</span>
                </div>
                <h3 class="text-xl font-bold text-dark mb-3">{phase.phase}</h3>
                <div class="text-sm text-primary font-medium mb-4">{phase.timeline}</div>
                <ul class="space-y-2">
                  {phase.tasks.map((task) => (
                    <li class="flex items-start gap-2 text-sm text-gray-600">
                      <i data-lucide="arrow-right" class="w-3 h-3 text-primary flex-shrink-0 mt-1"></i>
