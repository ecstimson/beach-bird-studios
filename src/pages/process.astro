---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ProcessTimeline from '../components/ProcessTimeline.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Our Process - How We Build Successful Websites | Beach Bird Studios';
const pageDescription = 'Discover Beach Bird Studios\' proven process for web design, AI development, and SEO services. Clear timelines, transparent communication, and guaranteed results.';
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  structuredDataType="WebPage"
  structuredData={{
    breadcrumb: [
      { name: "Home", url: "/" },
      { name: "Process", url: "/process" }
    ]
  }}
>
  <Header />
  
  <Hero
    headline="Our Proven <span style='color: #FFC107;'>Process</span> for Success"
    subheadline="Clear timelines, transparent communication, and guaranteed results. Here's exactly how we transform your online presence."
    primaryCTA={{
      text: "Start Your Project",
      href: "/contact"
    }}
    secondaryCTA={{
      text: "View Portfolio", 
      href: "/portfolio"
    }}
  />

  <main>
    <!-- Process Timeline Component -->
    <ProcessTimeline />
    
    <!-- Communication Standards -->
    <section class="section-padding bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-beach-dark mb-4">
            Communication & Support Standards
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            We believe in transparent communication and being available when you need us.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-beach-blue/10 rounded-lg flex items-center justify-center mb-4">
              <i data-lucide="calendar" class="w-6 h-6 text-beach-blue"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Weekly Updates</h3>
            <p class="text-gray-600">Regular progress updates every Friday with detailed status reports and next steps.</p>
          </div>
          
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-beach-blue/10 rounded-lg flex items-center justify-center mb-4">
              <i data-lucide="message-circle" class="w-6 h-6 text-beach-blue"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Direct Access</h3>
            <p class="text-gray-600">Direct phone and email access to your project team. No middlemen or account managers.</p>
          </div>
          
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-beach-blue/10 rounded-lg flex items-center justify-center mb-4">
              <i data-lucide="clock" class="w-6 h-6 text-beach-blue"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">24/7 Support</h3>
            <p class="text-gray-600">Round-the-clock technical support for critical issues and emergency assistance.</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Quality Standards -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-beach-dark mb-4">
            Our Quality Standards
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Every project meets our rigorous quality standards before launch.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-gradient-to-br from-beach-blue/5 to-beach-blue/10 rounded-xl p-8">
            <div class="w-12 h-12 bg-beach-blue rounded-lg flex items-center justify-center mb-6">
              <i data-lucide="zap" class="w-6 h-6 text-white"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Performance Standards</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Page load speed under 3 seconds</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Mobile-first responsive design</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Cross-browser compatibility testing</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Accessibility compliance (WCAG 2.1)</span>
              </li>
            </ul>
          </div>
          
          <div class="bg-gradient-to-br from-beach-yellow/5 to-beach-yellow/10 rounded-xl p-8">
            <div class="w-12 h-12 bg-beach-yellow rounded-lg flex items-center justify-center mb-6">
              <i data-lucide="shield" class="w-6 h-6 text-black"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Security & SEO Standards</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">SSL certificate implementation</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">SEO optimization built-in</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Regular security updates</span>
              </li>
              <li class="flex items-start">
                <i data-lucide="check" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                <span class="text-gray-600">Backup and recovery systems</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <CTASection
      headline="Ready to Start Your Project?"
      description="Let's discuss your goals and create a timeline that works for you"
      primaryCTA={{ text: 'Schedule Free Consultation', href: '/contact' }}
      secondaryCTA={{ text: 'Call 910-512-6990', href: 'tel:910-512-6990' }}
      variant="gradient"
    />
  </main>
  
  <Footer />
</Layout>