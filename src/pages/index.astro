---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Wilmington Web Design - 100+ Page Websites Fast | Beach Bird Studios';
const pageDescription = 'Wilmington web design & SEO services that actually work. Custom sites, 100+ page AI development, or SEO for any platform. Free consultation available.';

const deliverables = [
  {
    icon: 'zap',
    title: 'Lightning-Fast Development',
    description: 'We deliver complete websites in weeks while others take months. Your business can\'t afford to wait half a year to start generating leads.'
  },
  {
    icon: 'layers',
    title: 'Flexible Solutions',
    description: 'Three distinct paths to online success - choose what fits your needs and budget. Custom design, AI-powered development, or SEO for your current site.'
  },
  {
    icon: 'trending-up',
    title: 'Built for Results',
    description: 'Every website and SEO campaign is designed to convert visitors into customers. Beautiful design means nothing if it doesn\'t grow your business.'
  },
  {
    icon: 'map',
    title: 'Local Expertise',
    description: 'Based in Wilmington, serving all of North Carolina. We understand the coastal market and what local customers are searching for.'
  }
];

const services = [
  {
    title: 'Custom Web Design',
    description: 'Perfect for businesses wanting a stunning, manageable website without the complexity',
    features: ['Beautiful & Fast', 'Timeline: Weeks, not months', 'Custom Quote'],
    href: '/services',
    icon: 'palette'
  },
  {
    title: 'AI Development',
    description: 'Comprehensive websites with a page for every service and location - built faster than you thought possible',
    features: ['100+ Pages That Dominate', 'Strategic Coverage', 'Custom Quote'],
    href: '/services',
    icon: 'cpu',
    highlight: true
  },
  {
    title: 'SEO Services',
    description: 'We\'ll optimize your existing site on any platform - WordPress, Wix, Squarespace, or custom',
    features: ['Keep Your Website, Add Power', 'Monthly Service', 'No rebuild required'],
    href: '/services',
    icon: 'search'
  }
];

const successMetrics = [
  {
    icon: 'trending-up',
    title: 'Dramatic Ranking Improvements',
    description: 'From buried on page 5 to dominating position #1 in local searches'
  },
  {
    icon: 'users',
    title: 'Lead Generation That Works',
    description: 'Our clients regularly see 200-400% increases in quality leads'
  },
  {
    icon: 'zap',
    title: 'Speed That Converts',
    description: 'Fast-loading websites that keep visitors engaged and buying'
  },
  {
    icon: 'crown',
    title: 'Market Leadership',
    description: 'Become the obvious choice when customers search for your services'
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO title={pageTitle} description={pageDescription} />
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero
      headline="Premium Websites & SEO That Actually Work"
      subheadline="Three ways to grow online: Beautiful custom sites, AI-powered development, or SEO for your existing website"
      primaryCTA={{ text: 'Start Your Project', href: '/contact' }}
      secondaryCTA={{ text: 'See Our Services', href: '/services' }}
      variant="gradient"
    />
    
    <!-- What We Deliver -->
    <section class="section-padding bg-white">
      <div class="container-width">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-beach-dark mb-4">
            What We Deliver
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            We're not just another web agency. We're your partner in digital domination.
          </p>
        </div>
        
        <FeatureGrid features={deliverables} columns={2} variant="cards" />
      </div>
    </section>
    
    <!-- Services Preview -->
    <section class="section-padding bg-beach-cream/30">
      <div class="container-width">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-beach-dark mb-4">
            Our Services
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Choose the path that fits your business goals and budget
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {services.map((service) => (
            <ServiceCard {...service} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Success Metrics -->
    <section class="section-padding bg-gradient-to-br from-sky-50 to-white">
      <div class="container-width">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-chillax font-bold text-beach-dark mb-4">
            What Success Looks Like
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Real results our clients experience every day
          </p>
        </div>
        
        <FeatureGrid features={successMetrics} columns={2} variant="default" />
      </div>
    </section>
    
    <!-- Final CTA -->
    <CTASection
      headline="Ready to Stop Losing Customers Online?"
      description="Every day you wait, competitors are stealing your customers. Let's fix that."
      primaryCTA={{ text: 'Get Your Free Website Evaluation', href: '/contact' }}
      secondaryCTA={{ text: 'Call 910-512-6990', href: 'tel:910-512-6990' }}
      variant="gradient"
    />
  </main>
  
  <Footer />
</Layout>