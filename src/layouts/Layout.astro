---
import StructuredData from '../components/StructuredData.astro';
import ServiceCards from '../components/ServiceCards.astro';

// Prerender all pages using this layout (except API routes)
export const prerender = true;

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  structuredDataType?: 'LocalBusiness' | 'WebPage' | 'BreadcrumbList' | 'FAQPage' | 'Service';
  structuredData?: any;
  hideServiceCards?: boolean;
}

const { 
  title, 
  description = 'Beach Bird Studios - Premium Websites & SEO That Actually Work', 
  ogImage = '/og-image.jpg',
  structuredDataType = 'WebPage',
  structuredData = {},
  hideServiceCards = false
} = Astro.props;

const path = Astro.url.pathname;

// Auto-inject ServiceCards on marketing routes
const MARKETING_ROUTES = [/^\/$/, /^\/services(\/|$)/, /^\/industry(\/|$)/, /^\/locations(\/|$)/, /^\/about(\/|$)/];
const showServiceCards = !hideServiceCards && MARKETING_ROUTES.some(rx => rx.test(path));

// Canonical service data - matches DESIGN_SYSTEMS.md ServiceCards spec
const serviceCardData = {
  title: "Our Services",
  intro: "Choose the solution that fits your business goals and budget",
  items: [
    {
      icon: "globe",
      title: 'Custom Web Design',
      description: 'Perfect for businesses wanting a stunning, manageable website without the complexity',
      href: '/custom-website-design',
      label: 'Learn More'
    },
    {
      icon: "zap",
      title: 'AI Development',
      description: 'Comprehensive websites with a page for every service and location — built faster than you thought possible',
      href: '/ai-website-development',
      label: 'Learn More'
    },
    {
      icon: "trending-up",
      title: 'SEO Services',
      description: 'We\'ll optimize your existing site on any platform — WordPress, Wix, Squarespace, or custom',
      href: '/seo-services',
      label: 'Learn More'
    }
  ]
};
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/Icon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Preload Critical Fonts -->
    <link rel="preload" href="/fonts/Chillax-Variable.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/Synonym-Variable.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- Brand Fonts -->
    <link rel="stylesheet" href="/fonts/chillax.css">
    <link rel="stylesheet" href="/fonts/synonym.css">
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
    
    <!-- Structured Data -->
    <StructuredData 
      type={structuredDataType} 
      data={{ 
        title, 
        description, 
        ...structuredData 
      }} 
    />
  </head>
  <body class="bg-bg text-text antialiased">
    <slot />
    
    <!-- Auto-inject ServiceCards on marketing routes -->
    {showServiceCards && <ServiceCards {...serviceCardData} />}
  </body>
</html>

<style is:global>
  @import '../styles/tokens.css';
  @import '../styles/global.css';
</style>

<script is:inline>
  // Initialize Lucide icons on page load
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  });
  
  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', () => {
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  });
  
  // Also run after a short delay to catch any icons loaded after DOM ready
  setTimeout(() => {
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  }, 100);
</script>