---
/** ServiceCards.astro
 * Beach Bird Studios canonical service cards
 * Props: { title, intro?, items[] } where item = { icon?, title, description, href?, label? }
 */
export interface Props {
  title: string
  intro?: string
  items: {
    icon?: string | any
    title: string
    description: string
    href?: string
    label?: string
  }[]
}

const { title, intro, items = [] } = Astro.props
---

<section class="container mx-auto max-w-screen-xl px-4 md:px-6 py-16 md:py-24">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-heading font-semibold tracking-tight text-beach-dark">{title}</h2>
    {intro && (
      <p class="mt-4 text-lg text-beach-dark/80">{intro}</p>
    )}
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
    {items.map((item) => (
      <article class="bg-white border border-[#E7EDF3] shadow-[0_10px_30px_rgba(12,55,69,0.06)] p-6 md:p-8 rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition duration-250">
        {item.icon && (
          <div class="mb-6 size-10 rounded-full bg-beach-blue/10 text-beach-blue flex items-center justify-center">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 7h16M4 12h10M4 17h16" stroke-linecap="round"/>
            </svg>
          </div>
        )}
        
        <h3 class="text-xl font-heading font-semibold text-beach-dark mb-3">{item.title}</h3>
        <p class="text-beach-dark/80 mb-6">{item.description}</p>
        
        {item.href && (
          <a 
            href={item.href} 
            class="inline-flex items-center gap-2 bg-transparent text-beach-dark/70 hover:text-beach-blue hover:bg-gray-50 px-0 py-2 text-sm font-medium transition duration-150 ease-custom"
          >
            {item.label || 'Learn More'}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        )}
      </article>
    ))}
  </div>
</section>
