---
import Icon from './Icons.astro';

export interface Props {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  href: string;
  image?: string;
  readTime?: string;
}

const { title, excerpt, date, category, href, image, readTime = '5 min read' } = Astro.props;
---

<article class="card group hover-lift transition-all duration-300">
  {image && (
    <div class="aspect-video bg-beach-cream overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      />
    </div>
  )}
  
  <div class="p-6">
    <div class="flex items-center gap-4 text-sm mb-3">
      <span class="bg-beach-yellow text-beach-dark px-3 py-1 rounded-full font-medium">
        {category}
      </span>
      <span class="text-gray-500 flex items-center">
        <Icon name="calendar" size="sm" className="mr-1" />
        {date}
      </span>
      <span class="text-gray-500 flex items-center">
        <Icon name="clock" size="sm" className="mr-1" />
        {readTime}
      </span>
    </div>
    
    <h3 class="text-xl font-bold text-beach-dark mb-3 group-hover:text-beach-blue transition-colors">
      <a href={href} class="hover:underline">
        {title}
      </a>
    </h3>
    
    <p class="text-gray-600 mb-4 line-clamp-3">
      {excerpt}
    </p>
    
    <a 
      href={href}
      class="inline-flex items-center text-beach-blue hover:text-beach-dark transition-colors font-medium"
    >
      Read More
      <Icon name="arrow-right" size="sm" className="ml-2 group-hover:translate-x-1 transition-transform" />
    </a>
  </div>
</article>

<style>
  h3 {
    font-family: 'Chillax-Variable', sans-serif;
    font-variation-settings: 'wght' 600;
  }
  
  p, span {
    font-family: 'Synonym-Variable', sans-serif;
    font-variation-settings: 'wght' 400;
  }
</style>