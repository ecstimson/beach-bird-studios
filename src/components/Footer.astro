---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'Custom Web Design', href: '/custom-website-design' },
    { name: 'AI Website Development', href: '/ai-website-development' },
    { name: 'SEO Services', href: '/seo-services' },
    { name: 'Framer Development', href: '/framer-website-design' },
    { name: 'Webflow Development', href: '/webflow-website-design' },
  ],
  industries: [
    { name: 'Medical Practices', href: '/medical-practice-website-design' },
    { name: 'Dental Practices', href: '/dental-website-design' },
    { name: 'Law Firms', href: '/law-firm-website-design' },
    { name: 'Home Services', href: '/hvac-company-website-design' },
    { name: 'Real Estate', href: '/real-estate-website-design' },
  ],
  locations: [
    { name: 'Wilmington', href: '/web-design-wilmington-nc' },
    { name: 'Wrightsville Beach', href: '/wrightsville-beach-web-design' },
    { name: 'Carolina Beach', href: '/carolina-beach-web-design' },
    { name: 'Leland', href: '/leland-nc-web-design' },
    { name: 'Hampstead', href: '/hampstead-nc-web-design' },
  ],
  company: [
    { name: 'About Us', href: '/about' },
    { name: 'Portfolio', href: '/portfolio' },
    { name: 'Process', href: '/process' },
    { name: 'Blog', href: '/blog' },
    { name: 'Contact', href: '/contact' },
  ],
};
---

<footer class="bg-beach-dark text-white">
  <!-- Main Footer Content -->
  <div class="container-width py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="mb-4">
          <img src="/images/logo.svg" alt="Beach Bird Studios" class="h-10 w-auto brightness-0 invert" />
        </div>
        <p class="text-beach-light-blue text-sm mb-4">
          Premium websites & SEO that actually work. Serving Wilmington and all of North Carolina.
        </p>
        <div class="flex space-x-4">
          <!-- Social Icons -->
          <a href="#" aria-label="Facebook" class="text-beach-light-blue hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" aria-label="LinkedIn" class="text-beach-light-blue hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" aria-label="Twitter" class="text-beach-light-blue hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="font-chillax font-semibold text-lg mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-beach-light-blue hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Industries -->
      <div>
        <h3 class="font-chillax font-semibold text-lg mb-4">Industries</h3>
        <ul class="space-y-2">
          {footerLinks.industries.map((link) => (
            <li>
              <a href={link.href} class="text-beach-light-blue hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Locations -->
      <div>
        <h3 class="font-chillax font-semibold text-lg mb-4">Locations</h3>
        <ul class="space-y-2">
          {footerLinks.locations.map((link) => (
            <li>
              <a href={link.href} class="text-beach-light-blue hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="font-chillax font-semibold text-lg mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-beach-light-blue hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- CTA Section -->
  <div class="bg-beach-blue/20 border-t border-beach-blue/30">
    <div class="container-width py-12">
      <div class="text-center">
        <h2 class="font-chillax font-bold text-2xl mb-4">Ready to Dominate Online?</h2>
        <p class="text-beach-light-blue mb-6 max-w-2xl mx-auto">
          Every day without proper online presence is a day your competitors capture customers that should be yours.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-cta">
            Get Your Free Consultation
          </a>
          <a href="tel:910-512-6990" class="btn-secondary !border-white !text-white hover:!bg-white hover:!text-beach-dark">
            Call 910-512-6990
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-beach-blue/30">
    <div class="container-width py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-beach-light-blue text-sm text-center md:text-left">
          Â© {currentYear} Beach Bird Studios. All rights reserved.
        </div>
        <div class="flex space-x-6">
          <a href="/privacy-policy" class="text-beach-light-blue hover:text-white transition-colors text-sm">
            Privacy Policy
          </a>
          <a href="/terms-of-service" class="text-beach-light-blue hover:text-white transition-colors text-sm">
            Terms of Service
          </a>
          <a href="/sitemap" class="text-beach-light-blue hover:text-white transition-colors text-sm">
            Sitemap
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>