---
const currentYear = new Date().getFullYear();

const services = [
  { name: 'All Services', href: '/services' },
  { name: 'Custom Web Design', href: '/services/custom-website-design' },
  { name: 'AI Development', href: '/services/ai-website-development' },
  { name: 'SEO Services', href: '/services/seo-services' }
];

const company = [
  { name: 'About', href: '/about' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' },
  { name: 'FAQ', href: '/faq' }
];

const locations = [
  { name: 'Wilmington', href: '/locations/wilmington-nc' },
  { name: 'Raleigh', href: '/locations/raleigh-web-design' },
  { name: 'Greensboro', href: '/locations/greensboro-web-design' },
  { name: 'Asheville', href: '/locations/asheville-web-design' },
  { name: 'Charlotte', href: '/locations/charlotte-web-design' },
  { name: 'Durham', href: '/locations/durham-web-design' }
];
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company -->
      <div class="lg:col-span-1">
        <div class="footer-logo mb-4">
          <img 
            src="/images/logo.svg" 
            alt="Beach Bird Studios" 
            class="h-10 w-auto brightness-0 invert"
            style="max-width: 200px;"
          />
        </div>
        <p class="text-sm">Premium websites & SEO that actually work. Serving Wilmington and all of North Carolina.</p>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="text-white font-semibold mb-4">Services</h4>
        <ul class="space-y-2 text-sm">
          {services.map((service) => (
            <li>
              <a href={service.href} class="hover:text-white transition-colors">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Company</h4>
        <ul class="space-y-2 text-sm">
          {company.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Locations -->
      <div>
        <h4 class="text-white font-semibold mb-4">Locations</h4>
        <ul class="space-y-2 text-sm">
          {locations.map((location) => (
            <li>
              <a href={location.href} class="hover:text-white transition-colors">
                {location.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-white font-semibold mb-4">Get in Touch</h4>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center gap-2">
            <i data-lucide="phone" class="w-4 h-4"></i>
            <a href="tel:910-512-6990" class="hover:text-white transition-colors">910-512-6990</a>
          </li>
          <li class="flex items-center gap-2">
            <i data-lucide="mail" class="w-4 h-4"></i>
            <a href="mailto:eric@beachbirdstudios.com" class="hover:text-white transition-colors">eric@beachbirdstudios.com</a>
          </li>
          <li class="flex items-center gap-2">
            <i data-lucide="map-pin" class="w-4 h-4"></i>
            <span>Wilmington, NC</span>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center text-sm">
        <p>&copy; {currentYear} Beach Bird Studios. All rights reserved.</p>
        <div class="flex gap-4 mt-4 sm:mt-0">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
          <span class="text-gray-500">|</span>
          <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>