---
export interface Props {
  headline: string;
  subheadline?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const {
  headline,
  subheadline,
  primaryCTA,
  secondaryCTA,
} = Astro.props;
---

<section class="gradient-hero text-white pt-32 pb-20 relative">
  <!-- Animated gradient orbs -->
  <div class="hero-orb hero-orb-1"></div>
  <div class="hero-orb hero-orb-2"></div>
  <div class="hero-orb hero-orb-3"></div>
  
  <!-- Enhanced gradient mesh -->
  <div class="gradient-mesh absolute inset-0"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-6 animate-fadeInUp" set:html={headline}>
      </h1>
      {subheadline && (
        <p class="text-xl md:text-2xl text-blue-100 mb-10 animate-fadeInUp stagger-1">
          {subheadline}
        </p>
      )}
      {(primaryCTA || secondaryCTA) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fadeInUp stagger-2">
          {primaryCTA && (
            <a href={primaryCTA.href} class="btn-primary inline-flex items-center justify-center">
              <span style="color: #0C3745 !important;">{primaryCTA.text}</span>
              <i data-lucide="arrow-right" class="w-5 h-5 ml-2" style="color: #0C3745 !important;"></i>
            </a>
          )}
          {secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary inline-flex items-center justify-center">
              <span style="color: #0C3745 !important;">{secondaryCTA.text}</span>
              <i data-lucide="play-circle" class="w-5 h-5 ml-2" style="color: #0C3745 !important;"></i>
            </a>
          )}
        </div>
      )}
    </div>
    
    <!-- Trust Indicators -->
    <div class="mt-16 flex flex-wrap justify-center gap-8 text-sm text-blue-100 animate-fadeIn stagger-3">
      <div class="flex items-center gap-2">
        <i data-lucide="map-pin" class="w-4 h-4"></i>
        Based in Wilmington, NC
      </div>
      <div class="flex items-center gap-2">
        <i data-lucide="shield-check" class="w-4 h-4"></i>
        Serving All of North Carolina
      </div>
      <div class="flex items-center gap-2">
        <i data-lucide="zap" class="w-4 h-4"></i>
        Fast, Reliable Delivery
      </div>
      <div class="flex items-center gap-2">
        <i data-lucide="credit-card" class="w-4 h-4"></i>
        Payment Plans Available
      </div>
    </div>
  </div>
</section>