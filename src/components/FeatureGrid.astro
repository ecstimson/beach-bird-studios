---
import Icon from './Icons.astro';

export interface Feature {
  title: string;
  description: string;
  iconName?: string;
}

export interface Props {
  features: Feature[];
  columns?: 2 | 3 | 4;
  variant?: 'default' | 'cards' | 'minimal';
}

const { features, columns = 3, variant = 'default' } = Astro.props;

const gridClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4'
};
---

<div class={`grid ${gridClasses[columns]} gap-8`}>
  {features.map((feature) => (
    <div class={variant === 'cards' ? 'card p-8 hover-lift' : variant === 'minimal' ? 'p-4' : 'p-6 rounded-lg hover:bg-beach-cream/50 transition-all hover:scale-105'}>
      {feature.iconName && (
        <div class="mb-4">
          <Icon name={feature.iconName} size="lg" className="transition-transform hover:scale-110" />
        </div>
      )}
      <h3 class="text-xl font-bold text-beach-dark mb-3">
        {feature.title}
      </h3>
      <p class="text-gray-600 leading-relaxed">
        {feature.description}
      </p>
    </div>
  ))}
</div>

<style>
  h3 {
    font-family: 'Chillax-Variable', sans-serif;
    font-variation-settings: 'wght' 600;
  }
  
  p {
    font-family: 'Synonym-Variable', sans-serif;
    font-variation-settings: 'wght' 400;
  }
</style>