---
export interface Feature {
  title: string;
  description: string;
  icon?: string;
}

export interface Props {
  features: Feature[];
  columns?: 2 | 3 | 4;
  variant?: 'default' | 'cards' | 'minimal';
}

const { features, columns = 3, variant = 'default' } = Astro.props;

const gridClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4'
};
---

<div class={`grid ${gridClasses[columns]} gap-8`}>
  {features.map((feature) => (
    <div class={variant === 'cards' ? 'card p-6' : variant === 'minimal' ? '' : 'p-6 rounded-lg hover:bg-beach-cream/50 transition-colors'}>
      {feature.icon && (
        <div class="w-12 h-12 bg-beach-blue/10 rounded-lg flex items-center justify-center mb-4">
          <span class="text-2xl">{feature.icon}</span>
        </div>
      )}
      <h3 class="text-xl font-chillax font-semibold text-beach-dark mb-2">
        {feature.title}
      </h3>
      <p class="text-gray-600">
        {feature.description}
      </p>
    </div>
  ))}
</div>