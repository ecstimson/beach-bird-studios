---
export interface Props {
  title: string;
  subtitle?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
    phone?: boolean;
  };
}

const {
  title,
  subtitle,
  primaryCTA,
  secondaryCTA
} = Astro.props;
---

<section id="contact" class="py-20 gradient-hero text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-4">{title}</h2>
    {subtitle && (
      <p class="text-xl text-blue-100 mb-8">
        {subtitle}
      </p>
    )}
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {primaryCTA && (
        <a href={primaryCTA.href} class="btn-primary inline-flex items-center justify-center">
          <span class="text-beach-dark">{primaryCTA.text}</span>
          <i data-lucide="arrow-right" class="w-5 h-5 ml-2 text-beach-dark"></i>
        </a>
      )}
      {secondaryCTA && (
        <a href={secondaryCTA.href} class="btn-secondary inline-flex items-center justify-center">
          {secondaryCTA.phone && <i data-lucide="phone" class="w-5 h-5 mr-2 text-beach-dark"></i>}
          <span class="text-beach-dark">{secondaryCTA.text}</span>
        </a>
      )}
    </div>
  </div>
</section>