---
export interface Props {
  headline: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  variant?: 'default' | 'dark' | 'gradient' | 'accent';
  align?: 'center' | 'left';
}

const {
  headline,
  description,
  primaryCTA,
  secondaryCTA,
  variant = 'gradient',
  align = 'center'
} = Astro.props;

const variantClasses = {
  default: 'section-white',
  dark: 'section-navy',
  gradient: 'gradient-primary text-white',
  accent: 'section-sand'
};

const alignmentClasses = {
  center: 'text-center items-center',
  left: 'text-left items-start'
};
---

<section class={`${variantClasses[variant]} py-20 sm:py-24 lg:py-28`}>
  <div class="container-width">
    <div class={`max-w-4xl ${align === 'center' ? 'mx-auto' : ''} flex flex-col ${alignmentClasses[align]}`}>
      <h2 class={`text-3xl sm:text-4xl lg:text-5xl font-bold mb-6 ${variant === 'dark' || variant === 'gradient' ? 'text-white' : 'text-beach-dark'}`}>
        {headline}
      </h2>
      
      {description && (
        <p class={`text-lg sm:text-xl mb-10 ${variant === 'dark' || variant === 'gradient' ? 'text-beach-light-blue' : 'text-gray-600'} max-w-3xl`}>
          {description}
        </p>
      )}
      
      {(primaryCTA || secondaryCTA) && (
        <div class={`flex flex-col sm:flex-row gap-4 ${align === 'center' ? 'justify-center' : ''}`}>
          {primaryCTA && (
            <a 
              href={primaryCTA.href} 
              class="btn-cta text-lg px-8 py-4 hover-lift"
            >
              {primaryCTA.text}
            </a>
          )}
          {secondaryCTA && (
            <a 
              href={secondaryCTA.href}
              class={`btn-light text-lg px-8 py-4 hover-lift ${variant === 'dark' || variant === 'gradient' ? 'text-beach-dark' : ''}`}
            >
              {secondaryCTA.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  h2 {
    font-family: 'Chillax-Variable', sans-serif;
    font-variation-settings: 'wght' 700;
    letter-spacing: -0.02em;
  }
  
  p {
    font-family: 'Synonym-Variable', sans-serif;
    font-variation-settings: 'wght' 400;
    line-height: 1.7;
  }
</style>